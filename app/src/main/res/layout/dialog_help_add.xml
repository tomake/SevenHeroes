<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_bg"
              android:orientation="vertical"
    android:layout_margin="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/tvHelpBox"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/use_item_box"
            android:gravity="center"
            android:text="@string/houyuan_package"
            android:textColor="@color/white"
            android:background="@drawable/tv_help_selector"
            />

        <TextView
            android:id="@+id/tvHelpPackage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/use_item_pkg"
            android:gravity="center"
            android:text="@string/houyuan_box"
            android:textColor="@color/white"
            android:background="@drawable/tv_help_selector"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/sure"
            android:id="@+id/btnSure"
            android:layout_gravity="center_horizontal"
            style="@style/CommonButtonStyle"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/btnCancel"
            style="@style/CommonButtonStyle"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>