<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" tools:ignore="NewApi">
    </style>

    <style name="CommonButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:background">@drawable/btn_common_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/yellow</item>
    </style>
    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HistoryServerTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tv_server_history_selector</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PossessionTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:text">@string/virtual_count</item>
    </style>

    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="FunctionTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ImageButtonStyle" parent="android:Widget.ImageButton"  >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="StyledIndicators" parent="android:Theme.Holo" tools:ignore="NewApi">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:buttonStyle">@style/CommonButtonStyle</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/pager_tab_bg</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:dividerPadding" tools:ignore="NewApi">30dp</item>
        <item name="android:showDividers" tools:ignore="NewApi">middle</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="RatingBarStyle" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_style_bg</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">20dp</item>
    </style>

</resources>
